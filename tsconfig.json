{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "node_modules/wmr/types.d.ts",
    "**/*",
    "*.ts",
    "netlify/functions/*"
  ],
  "exclude": ["dist/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
